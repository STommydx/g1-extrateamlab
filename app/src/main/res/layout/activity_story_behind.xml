<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryBehind">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/story_bg"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/background_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/story_bg"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/story_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:maxHeight="?android:attr/actionBarSize">
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="208dp"
        android:layout_height="208dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/story_toolbar"
        app:srcCompat="@drawable/story_dog" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="336dp"
        android:layout_height="158dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/stroystring"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>